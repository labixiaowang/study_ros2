<?xml version="1.0"?>
<robot xmlns:xacro= "http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find fishbot_description)/urdf/robot/common_inertial.xacro"/>
    <xacro:macro name="wheel_xacro"  params = "wheel_name xyz">
        <!-- 机器人的惯性测量单元（IMU） -->
        <link name="${wheel_name}_link">
            <visual>
                <!--沿着自己几何中心的偏移和旋转  -->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <!-- 几何形状 -->
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <material name="yelllow">
                    <color rgba="1.0 1.0 0.0 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
            </collision>
            <xacro:cylinder_inertia m="0.05" r="0.032" h="0.04"/>
            <!-- 惯性块 -->
            <!-- <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="0.05"/>
                <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/> 
            </inertial> -->
        </link>
        
        <joint name="${wheel_name}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>

        <gazebo reference="${wheel_name}_link">
            <material>Gazebo/Yellow</material>
            <!-- mu1:切向摩擦系数 mu2:法向摩擦系数 kp:刚度系数 kd：阻尼系数 -->
            <mu1 value="20.0"/> 
            <mu2 value="20.0"/> 
            <kp value="1000000.0"/> 
            <kd value="1.0"/>
        </gazebo>
    </xacro:macro>
</robot>

