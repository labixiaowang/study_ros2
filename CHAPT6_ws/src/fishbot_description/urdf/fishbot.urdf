<?xml version="1.0"?>
<robot name="first_robot">
    <!--机器人的身体部分  -->
    <link name="base_link">
        <!-- 部件的外观描述  -->
        <visual>
            <!-- 沿着自己几何中心的偏移和旋转 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <!-- 部件的外观形状 -->
            <geometry>
            <!-- 圆柱体半径和高度 -->
                <cylinder radius="0.10" length="0.12"/>
            </geometry>
            <!-- 部件的外观材质 -->
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        
    </link>
    <!-- 机器人的惯性测量单元（IMU） -->
    <link name="imu_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>
    <!-- 机器人的关节部分 -->
    <joint name="imu_joint" type="fixed">
        <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="imu_link"/>
    </joint>
</robot>